extends ../layout/main.pug

include ../blocks/sCabinet/_sCabinet.pug
include ../blocks/sReg/_sReg.pug

block variables
	- let  mainPage= 'lk-page'
	- let  bg= '11-cabinet-client-3.jpg'

block title
	- let  title= 'ЛК ПСИХОЛОГА 12 02'
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	+parts('header')
	main
		+page-head('','','Личный кабинет')
		+sCabinet(true)
			+b.sCabinet-body
				+e.client-row.row
					.col-sm: +input("Все",'select','Клиент:') 
					.col-sm-auto: .btn.btn-primary(href='#') Позвонить
				+e.chat-wrap
					+e.video: +img('img/svg/zoom-icon.svg')
					+e.chat
						+e.chat-inner.custom-scroll
							+e.day
								span 28/10/23
								+e.message
									+e.message-item
										p Здравствуйте, рада вас слышать, готова.
										span 28.10.23 17:31
									+e.message-avatar: +img('img/avatar.jpg', 'bg')
								+e.message--you
									+e.message-item
										p Здравствуйте, вы готовы к встрече?
										span 28.10.23 17:31
									+e.message-avatar: +img('img/avatar.jpg', 'bg')
						+b.send-message
							+input('Введите сообщение', 'text', '')
								button(type="submit"): +icon('send')
	+parts('footer')