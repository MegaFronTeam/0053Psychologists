mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти" inputmode='search')
			button
				+icon("search")

mixin page-head(t,descr,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)
			if t
				+e.row.row
					.col-lg-5
						h1= t
					.col-lg-7
						p= descr

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin sortingItem(t)
	.col-auto
		+e.btn.select-btn(href="#")&attributes(attributes)!= t

mixin cardBody(img, title, text, hovered, badge)
	if badge
		+e.badge!= badge
	if hovered
		+e.hovered.custom-scroll
			+e.more-info i
			+e.name!= title
			p Психолог, сертифицированный гештальт-терапевт
			+e.item
				span Опыт работы:
				p 12 лет
			+e.item
				span С чем работает:
				ul
					li 
						+iconC('check')
						| Сильные эмоции: гнев, агрессия
					li 
						+iconC('check')
						| Панические атаки
					li 
						+iconC('check')
						| Самооценка и уверенность в себе
					li 
						+iconC('check')
						| Травматические события в прошлом
					li 
						+iconC('check')
						| Панические атаки
					li 
						+iconC('check')
						| Сильные эмоции: гнев, агрессия
					li 
						+iconC('check')
						| Травматические события в прошлом
					li 
						+iconC('check')
						| Панические атаки
	+e.img-wrap: +img(`img/${img}`, 'bg')
	+e.content
		if title
			+e.title!= title
		if text
			+e.text!= text
mixin card(img, title, text, hovered, badge)
	+b.card(href="#")&attributes(attributes)
		+cardBody(img, title, text, hovered, badge)

mixin cardInput(img, title, text, hovered, badge)
	label.card-label
		input(type="radio", name="psi")
		+b.card()&attributes(attributes)
			+cardBody(img, title, text, hovered, badge)

mixin note()
	+b.note
		+e.date 11.05.2023 16:00
		p В&nbsp;отличии от&nbsp;lorem ipsum, текст рыба на&nbsp;русском языке наполнит любой макет непонятным смыслом и&nbsp;придаст неповторимый колорит советских времён. Вы&nbsp;посещали эту страницу несколько раз
		+e.favorite(href='#'): +icon('star')
mixin cardInputCheck(img, title, text, hovered, badge)
	label.card-label
		input(type="checkbox", name="psi")
		+b.card()&attributes(attributes)
			+cardBody(img, title, text, hovered, badge)

