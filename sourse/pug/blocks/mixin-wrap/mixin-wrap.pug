mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти" inputmode='search')
			button
				+icon("search")

mixin page-head(t,descr,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)
			+e.row.row
				.col-lg-5
					h1= t
				.col-lg-7
					p= descr

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin sortingItem(t)
	.col-auto
		+e.btn.select-btn(href="#")&attributes(attributes)!= t

mixin card(img, title, text, hovered, badge)
	+b.card()&attributes(attributes)
		if badge
			+e.badge!= badge
		if hovered
			+e.hovered.custom-scroll
				+e.more-info i
				+e.name!= title
				p Психолог, сертифицированный гештальт-терапевт
				+e.item
					span Опыт работы:
					p 12 лет
				+e.item
					span С чем работает:
					ul
						li 
							+iconC('check')
							| Сильные эмоции: гнев, агрессия
						li 
							+iconC('check')
							| Панические атаки
						li 
							+iconC('check')
							| Самооценка и уверенность в себе
						li 
							+iconC('check')
							| Травматические события в прошлом
						li 
							+iconC('check')
							| Панические атаки
						li 
							+iconC('check')
							| Сильные эмоции: гнев, агрессия
						li 
							+iconC('check')
							| Травматические события в прошлом
						li 
							+iconC('check')
							| Панические атаки
		+e.img-wrap: +img(`img/${img}`, 'bg')
		+e.content
			+e.title!= title
			+e.text!= text